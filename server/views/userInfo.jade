doctype html
html
    head
        title userInfo
        script(src='../lib/jquery.js')
        link(href='/bin/css/header.css', rel='stylesheet')
        script(src='/bin/js/header.js')
    body
        p userInfo
        include ./includes/header.jade
        p username:
            span=user.username
        p status:
            span=user.status
        p password:
            span=user.password
        div
            p update:
            input(type='text')
            button(type='button' class='password-update') submit
        p email:
            span=user.email
        div
            p update:
            input(type='text')
            button(type='button' class='email-update') submit
        p avatar
        img(src= '/assets/img/user/' + user.avatar alt='avatar')
        p chooseImage:
        form(action='/User/uploadAvatar' method='post' enctype='multipart/form-data')
            input(type='file' name='img')
            button upload
        script(src='../bin/js/userInfo.js')

