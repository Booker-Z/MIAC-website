doctype html
html
    head
        title userInfo
        script(src='../lib/jquery.js')
    body
        p userInfo
        include ./includes/header.jade
        p username:
            span=user.username
        p password:
            span=user.password
        div
            p update:
            input(type='text')
            button(type='button' class='password-update') submit
        p email:
            span=user.email
        div
            p update:
            input(type='text')
            button(type='button' class='email-update') submit
        p avatar
        img(src='/views/assets/img/user/' + user.avatar)
        p chooseImage:
        form(action='/user/uploadAvatar' method='post' enctype='multipart/form-data')
            input(type='file' name='img')
            button(class='avatar-upload') upload
        script(src='../bin/js/userInfo.js')

